<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteAccount">


    <EditText
        android:id="@+id/Delet_Password"
        android:layout_width="207dp"
        android:layout_height="48dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="103dp"
        android:autofillHints=""
        android:drawableStart="@drawable/lock"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="密碼"
        android:inputType="textPassword"
        android:textColorHint="#545454"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Delet_Account" />

    <TextView
        android:id="@+id/Delet_result"
        android:layout_width="86dp"
        android:layout_height="38dp"

        android:layout_below="@+id/Delet_Sure"
        android:layout_alignStart="@+id/Delet_Sure"
        android:layout_alignEnd="@+id/Delet_Sure"
        android:layout_marginStart="164dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="164dp"
        android:textColor="#FFF3DC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Delet_Sure"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="107dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="107dp"
        android:background="@drawable/capsule"
        android:backgroundTint="#FFED99"
        android:text="確定"

        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Delet_Password" />

    <TextView
        android:id="@+id/Delet_Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="179dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="174dp"
        android:text="員工帳號:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Delet_result" />
</androidx.constraintlayout.widget.ConstraintLayout>