<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="#fff3dc">

        <RelativeLayout
            android:layout_width="398dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <TextView
                    android:id="@+id/item__name"
                    android:layout_width="386dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:text="資產名稱:"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/item__code"
                    android:layout_width="384dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="8dp"
                    android:text="資產代號:"
                    android:textColor="#545454"
                    android:textSize="15sp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item__name" />

                <TextView
                    android:id="@+id/item__discard"
                    android:layout_width="384dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="112dp"
                    android:text="資產報銷狀態:"
                    android:textColor="#545454"

                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item__name" />

                <TextView
                    android:id="@+id/item__rent"
                    android:layout_width="384dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="88dp"
                    android:text="資產租借/使用狀態:"
                    android:textColor="#545454"

                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item__name" />

                <TextView
                    android:id="@+id/item__person"
                    android:layout_width="384dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="32dp"
                    android:text="租借資產人員:"
                    android:textColor="#545454"

                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item__name" />

                <TextView
                    android:id="@+id/item__place"
                    android:layout_width="384dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="56dp"
                    android:text="資產租借地點:"
                    android:textColor="#545454"
                    android:textSize="15sp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item__name" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
